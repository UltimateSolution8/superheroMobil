EXPO_PUBLIC_API_BASE_URL=http://localhost:8080
EXPO_PUBLIC_SOCKET_URL=http://localhost:8090
EXPO_PUBLIC_DEV_SHOW_OTP=true
# Optional demo fallback location (lat,lng) when emulator GPS is unavailable.
# Example: EXPO_PUBLIC_DEMO_FALLBACK_LOCATION=12.9716,77.5946
EXPO_PUBLIC_DEMO_FALLBACK_LOCATION=

# If you run on a physical device, "localhost" won't point to your laptop.
# Use your machine IP on the same Wi-Fi, e.g.:
# EXPO_PUBLIC_API_BASE_URL=http://192.168.1.10:8080
# EXPO_PUBLIC_SOCKET_URL=http://192.168.1.10:8090
